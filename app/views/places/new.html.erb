<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div id="background-form">
        <h1>Create a new place</h1>
        <%= simple_form_for(@place) do |f| %>
          <%= render partial: 'form', locals: {f: f} %>
        <% end %>
        <br>
      </div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    var _latitude = 43.118999;
    var _longitude = 5.936625;
    var _zoom = 2;
    setupNewPlace(_latitude, _longitude, _zoom);
  <%end%>
<%end%>
