<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function(){
        $(".element").typed({
            strings: ["^0shared spaces", "^3000 a meeting room", "^2000 a tennis court", "^2000 your family cabin", "^2000 or a shared boat","^2000 ...","^2000 any shared space..."],
            typeSpeed: 0
        });
    });
  <% end %>
  <%= javascript_tag do %>
    $(document).ready(function(){
      $(window).scroll(function() {
        var scroll = $(window).scrollTop();

        if (scroll >= 190) {
          $('.navbar-wagon-home').addClass('post-scroll');
        } else {
          $('.navbar-wagon-home').removeClass('post-scroll');
        }
      });
    });
  <% end %>
<% end %>
