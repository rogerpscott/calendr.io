 <% @image = @place.photo ? (cl_image_tag 'place.photo.path') : (image_path 'tennis.jpg')   %>

 <div class="wrapper wrapper-color-letter">
  <div class="container-fluid">
    <div class="row header-place">
      <div id="background-place-header" style="background-image: linear-gradient(-5deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 30%), url('<%= @image %>')">
      </div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12 col-sm-5">
            <div class="header-item-image">
              <% if @place.photo %>
              <%= cl_image_tag @place.photo.path, class:"place-img-header" %>
              <% else %>
              <%= image_tag 'tennis.jpg', class:"place-img-header" %>
              <% end %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-7">
            <div class="place-border-block">
              <h2><%= @place.name %></h2>
              <p><em><%= @place.address %></em></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="calendar-form-block">
        <%= render 'places/calendar' %>
        <%= render 'places/place_booking', place: @place %>
      </div>
    </div>
  </div>
</div>
<%= render 'calendar' %>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div id="map" style="width: 100%; height: 200px;"></div>
      <% content_for(:after_js) do %>
        <%= javascript_tag do %>
          $(document).ready(function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
          handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
          }
          });
          });
        <% end %>
      <% end %>
    </div>
  </div>
</div>

